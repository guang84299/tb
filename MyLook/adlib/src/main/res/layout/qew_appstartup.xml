<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    
    <FrameLayout 
       android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:alpha="0.8"
    	android:background="#000000" ></FrameLayout>

    <Button
        android:id="@+id/bt_appstartup_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/qew_appstartup_close" />

    <RelativeLayout
        android:id="@+id/lay_appstartup_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="130dp" >

        <ImageView
            android:id="@+id/iv_appstartup_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/qew_lock_icon" />

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_appstartup_icon" >

            <TextView
                android:id="@+id/tv_appstartup_appName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="My Snake"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <RatingBar
                android:id="@+id/pb_appstartup_eval"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10dp"
                android:numStars="5"
                android:progress="30"
                android:progressDrawable="@drawable/qew_rating_bar"
                android:rating="5"
                android:stepSize="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="Sponsored"
                android:textColor="#c5c5c5"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_appstartup_2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/relativeLayout1"
            android:layout_marginTop="10dp"
            android:background="#000000" >

            <ImageView
                android:id="@+id/iv_appstartup_pic"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/qew_lock_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_appstartup_dsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/lay_appstartup_2"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="aa"
            android:textColor="#d0d0d0"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bt_appstartup_detail"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_appstartup_dsc"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/qew_appstartup_btn"
            android:text="More Detail"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>